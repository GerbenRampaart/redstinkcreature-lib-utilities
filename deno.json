{
	"name": "@redstinkcreature/lib-utilities",
	"version": "0.4.9",
	"publish": {
		"include": [
			"./src",
			"./README.md",
			"deno.json",
			"mod.ts"
		]
	},
	"nodeModulesDir": true,
	"exports": "./mod.ts",
	"tasks": {
		"release": "git add . && git commit -m 'Minor release' && sudo jsr publish",
		"dev": "DENO_FUTURE=1 DENO_ENV=development deno run --watch --allow-net --allow-read --allow-env --allow-sys ./src/main.ts",
		"dev:prd": "DENO_ENV=production deno run --watch --allow-net --allow-read --allow-env --allow-sys ./src/main.ts",
		"test": "DENO_ENV=test deno test --allow-all ./src/**/*.test.ts",
		"test:cfg": "DENO_ENV=test deno test --allow-all ./src/services/config/app-config.service.test.ts",
		"test:http": "DENO_ENV=test deno test --trace-leaks --allow-all ./src/services/http/app-http.service.test.ts",
		"repl": "DENO_ENV=repl deno run --watch --allow-all ./src/util/repl.ts",
		"build": "deno run --allow-all ./src/util/build.ts",
		"ncu": "ncu -p deno -u"
	},
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"imports": {
		"@nestjs/common": "npm:@nestjs/common@10.3.9",
		"@nestjs/core": "npm:@nestjs/core@10.3.9",
		"@nestjs/platform-express": "npm:@nestjs/platform-express@10.3.9",
		"@nestjs/axios": "npm:@nestjs/axios@3.0.2",
		"@nestjs/testing": "npm:@nestjs/testing@10.3.9",
		"rxjs": "npm:rxjs@7",
		"nestjs-pino": "npm:nestjs-pino@4",
		"pino": "npm:pino@9",
		"pino-pretty": "npm:pino-pretty@11",
		"pino-http": "npm:pino-http@10",
		"zod": "npm:zod@3",
		"express": "npm:express@4",
		"axios": "npm:axios@1",
		"https-proxy-agent": "npm:https-proxy-agent@7",
		"supertest": "npm:supertest@7",
		"@std/dotenv": "jsr:@std/dotenv@0.224.0",
		"@std/assert": "jsr:@std/assert@0.224.0",
		"@std/path": "jsr:@std/path@0.224.0",
		"@std/fs": "jsr:@std/fs@0.224.0"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": [
			"src/"
		]
	},
	"lint": {
		"include": [
			"src/"
		],
		"rules": {
			"tags": [
				"recommended"
			]
		}
	}
}
