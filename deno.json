{
    "name": "@redstinkcreature/lib-utilities",
    "version": "0.1.0",
    "exports": "./index.ts",
    "tasks": {
        "dev": "DENO_ENV=development deno run --watch --allow-net --allow-read --allow-env ./src/main.ts",
        "test": "DENO_ENV=test deno test ./src/**/*.test.ts"
    },
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true       
    },
    "imports": {
        "@nestjs/common": "npm:@nestjs/common@10",
        "@nestjs/core": "npm:@nestjs/core@10",
        "@nestjs/platform-express": "npm:@nestjs/platform-express@10",
        "reflect-metadata": "npm:reflect-metadata",
        "rxjs": "npm:rxjs@7",
        "nestjs-pino": "npm:nestjs-pino@4",
        "pino": "npm:pino@9",
        "dotenv": "jsr:@std/dotenv",
        "glob": "npm:glob@10",
        "pino-pretty": "npm:pino-pretty@11",
        "pino-http": "npm:pino-http@10",
        "zod": "npm:zod@3",
        "@nestjs/axios": "npm:@nestjs/axios@3",
        "axios": "npm:axios@1",

        "@nestjs/testing": "npm:@nestjs/testing@10",
        "supertest": "npm:supertest@7",
        "std/assert": "jsr:@std/assert"
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": [
            "src/"
        ]
    },
    "lint": {
        "include": [
            "src/"
        ],
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    }
}